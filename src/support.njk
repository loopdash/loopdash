<div class="support-content">

  <div class="image-wrapper">
    {% image "./src/img/blogs/marbel-flow-horizontal.jpg", "Image description", [300, 1920], ["jpeg", "webp"], "image" %}
  </div>
  <div class="half-image">
  </div>
  <section class="mx-auto">
  <div class="text-set mb-0">
    <h1 class="text-11 text-weight-600 text-gradient">Support</h1>
    <p class="text-5 text-charcoal-light text-weight-400">Support, when you need it.</p>
  </div>

  <div class="container-xs mx-auto mb-10">
    <form id="contactForm" class="form" action="https://formspree.io/f/xvggvkez" method="POST">
      <div class="form-group">
        <label class="form-label" for="name">Name</label>
        <input
          class="form-input"
          type="text"
          id="name"
          name="name"
          placeholder="Your name"
          required=""
        />
        <p class="error" id="nameError" aria-live="polite" style="display: none;">Name is required.</p>
      </div>
      <div class="form-group">
        <label class="form-label" for="email">Email Address</label>
        <input
          class="form-input"
          type="email"
          id="email"
          name="email"
          placeholder="Your email address"
          required=""
        />
        <p class="error" id="emailError" aria-live="polite" style="display: none;">Valid email is required.</p>
      </div>
      <div class="form-group">
        <label class="form-label" for="domain">Domain Name</label>
        <input
          class="form-input"
          type="text"
          id="domain"
          name="domain"
          placeholder="https://example.com"
        />
      </div>
      <div class="form-group">
        <label class="form-label" for="message">Details</label>
        <textarea
          id="details"
          name="details"
          class="form-input"
          placeholder="A detailed description of your issue or project."
          required
        ></textarea>
        <p class="error" id="detailsError" aria-live="polite" style="display: none;">Details are required.</p>
      </div>
      <button type="submit" class="button button-primary">Send</button>
    </form>
  </div>
</section>
</div>
