<article class="form-container support-form">
  <div class="wrap900">
    <form name="support" method="POST" data-netlify="true" action="/thank-you/">

      <div class="field-row">
        <div class="field-wrapper">
          <label>Your Name</label>
          <input type="text" name="name" />
        </div>

        <div class="field-wrapper">
          <label>Your Email</label>
          <input type="email" name="email" />
        </div>
      </div>

      <div class="field-wrapper">
        <label>Your Question or Comment</label>
        <textarea name="question" rows="8" cols="80"></textarea>
      </div>

      <div class="field-wrapper submit">
        <button type="submit" class="button">Send Message</button>
      </div>
    </form>
  </div>
</article>
