<article class="form-container contact-form">
  <form name="contact" method="POST" netlify-honeypot="bot-field" data-netlify="true" action="/thank-you/">
    <div class="field-wrapper hidden">
      <label>Don’t fill this out if you’re human: <input name="bot-field"/></label>
    </div>
    <div class="field-row">
      <div class="field-wrapper">
        <label>Your Name</label>
        <input type="text" name="name"/>
      </div>
      <div class="field-wrapper">
        <label>Your Email</label>
        <input type="email" name="email"/>
      </div>
    </div>
    <div class="field-wrapper">
      <label>Tell Us About Your Project</label>
      <textarea name="about" rows="8" cols="80"></textarea>
    </div>
    <div class="field-wrapper">
      <label>Your timeline</label>
      <ul class="radios">
        <li>
          <input type="radio" id="asap" name="timeline"/>
          <label for="asap">asap</label>
        </li>
        <li>
          <input type="radio" id="2-4-weeks" name="timeline"/>
          <label for="2-4-weeks">2-4 weeks</label>
        </li>
        <li>
          <input type="radio" id="4-6-weeks" name="timeline"/>
          <label for="4-6-weeks">4-6 weeks</label>
        </li>
        <li>
          <input type="radio" id="6-8-weeks" name="timeline"/>
          <label for="6-8-weeks">6-8 weeks</label>
        </li>
        <li>
          <input type="radio" id="8-10-weeks" name="timeline"/>
          <label for="8-10-weeks">8-10 weeks</label>
        </li>
        <li>
          <input type="radio" id="12-plus-weeks" name="timeline"/>
          <label for="12-plus-weeks">12+ weeks</label>
        </li>
      </ul>
    </div>
    <div class="field-wrapper">
      <label>Your Budget</label>
      <ul class="radios">
        <li>
          <input type="radio" id="2.5" name="budget"/>
          <label for="2.5">$2.5K</label>
        </li>
        <li>
          <input type="radio" id="5" name="budget"/>
          <label for="5">$5K</label>
        </li>
        <li>
          <input type="radio" id="7.5" name="budget"/>
          <label for="7.5">$7.5K</label>
        </li>
        <li>
          <input type="radio" id="10" name="budget"/>
          <label for="10">$10K</label>
        </li>
        <li>
          <input type="radio" id="12.5" name="budget"/>
          <label for="12.5">$12.5K</label>
        </li>
        <li>
          <input type="radio" id="15" name="budget"/>
          <label for="15">$15K</label>
        </li>
      </ul>
    </div>
    <div class="field-wrapper">
      <label>Did someone refer you?</label>
      <ul class="radios">
        <li>
          <input onclick="showHidden()" type="radio" id="yesReferred" name="refer"/>
          <label for="yesReferred">Yes</label>
        </li>
        <li>
          <input onclick="showHidden()" type="radio" id="noReferred" name="refer"/>
          <label for="noReferred">No</label>
        </li>
      </ul>
    </div>
    <div id="referral" class="field-wrapper hidden">
      <script>
        var referral = document.getElementById('referral');
        function showHidden() {
          if (document.getElementById('yesReferred').checked) {
            referral.classList.add('show');
          } else {
            referral.classList.remove('show');
          }
        }
      </script>
      <label>Who referred you?</label>
      <input name="referral" type="text">
    </div>
    <div class="field-wrapper submit">
      <button type="submit" class="button">Send</button>
    </div>
  </form>
</article>