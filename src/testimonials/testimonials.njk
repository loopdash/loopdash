---
layout: text.njk
meta:
  title: Testimonials
  description: Insights from the people who trust us to bring their ideas to life.
pagination:
  data: collections.testimonials
  size: 30
  alias: testimonials
sitemap:
  changefreq: weekly
  priority: 0.7
---

<section class="container-lg mx-auto">
  <h1 class="text-13 text-weight-400 my-12 text-gradient">Testimonials</h1>
  <div class="flex mb-16">
    <div class="col-5">
      <p class="text-5">Insights from the people who trust us to bring their ideas to life.</p>
    </div>
  </div>

  <div class="flex">
    {% for testimonial in testimonials | reverse %}
      <div class="col-6">
        <div class="card card-default">
          <div class="mw-xs py-8 px-2">
            <p class="text-3 text-charcoal-light text-weight-400">{{ testimonial.data.description }}</p>
            <p class="text-2 text-charcoal-light mb-0">{{ testimonial.data.name }}, {{ testimonial.data.role }}</p>
            <p class="text-2 text-charcoal-light mb-0">{{ testimonial.data.company }}</p>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</section>
