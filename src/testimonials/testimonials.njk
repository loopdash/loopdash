---
layout: text.njk
meta:
  title: Testimonials
  description: Insights from the people who trust us to bring their ideas to life.
pagination:
  data: collections.testimonials
  size: 30
  alias: testimonials
sitemap:
  changefreq: weekly
  priority: 0.7
---


<div class="testimonials">
  <div class="single-testimonial align-items-start">
    <div class="py-4 px-6">
      <div class="py-8 px-2 container-md mx-auto">
        <h1 class="text-16 text-weight-400 mb-12 mt-48 ">Testimonials</h1>
        <p class="text-9">Insights from the people who trust us to bring their ideas to life.</p>
      </div>
    </div>
  </div>
  {% for testimonial in testimonials | reverse %}
    <div class="single-testimonial">
      <div class="py-4 px-6">
        <div class="py-8 px-2 container-md mx-auto">
          <p class="text-9 text-weight-400 mb-5">{{ testimonial.data.description | safe }}</p>
          <p class="text-3 mb-0 text-mono text-uppercase">{{ testimonial.data.name }}, {{ testimonial.data.role }}</p>
          <p class="text-3 mb-0 text-mono text-uppercase">{{ testimonial.data.company }}</p>
        </div>
      </div>
    </div>
  {% endfor %}
</div>
