<section class="hero">
  <div class="video-container">
    <div class="video-bkg"></div>
    <video autoplay muted loop defaultMuted playsinline preload="auto" class="video" oncontextmenu="return false;">
      <source src="https://cdn.loopdash.com/video/alpha.mp4" type="video/mp4">
      <source src="https://cdn.loopdash.com/video/alpha.webm" type="video/webm">
    </video>
  </div>
  <div class="text-set text-set-home pb-24">
    <h1 class="text-11 text-weight-600 text-gradient-white">Bringing simplicity back to web development.</h1>
    <p class="text-7 text-weight-400">We help businesses, nonprofits, and changemakers amplify their impact and achieve results.</p>
    <a href="/about" class="button button-secondary plausible-event-name=Home+About+Button+Click">About us</a>
  </div>
</section>

<section class="projects container-xl mt-16">
  {% for project in projects | sortByDate %}
    {% if project.data.project.featured and project.data.date | isPastDate %}
      <a href="{{project.data.page.url}}" class="reveal project project-{{project.data.project.class}} plausible-event-name=Home+Project+Card+Click+{{project.data.project.class | replace('-', '+')}}">
        <div class="project-details">
          <h4 class="text-7 m-0">{{ project.data.project.name }}</h4>
          <p class="text-4 m-0 text-weight-400">{{ project.data.project.tagline }}</p>
        </div>
      </a>
    {% endif %}
  {% endfor %}
</section>

