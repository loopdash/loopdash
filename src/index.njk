<section class="home-hero">
  <h1 class="text-12 text-weight-600 text-gradient">Web Development Without the Drama</h1>
  <p class="text-8 text-weight-300 text-charcoal-light">We help founders, nonprofits, and changemakers amplify their impact and achieve results.</p>
  <a href="/about" class="button button-secondary">About us</a>
</section>

<section class="projects container-xl">
  {% for project in projects %}
    <a href="{{project.data.page.url}}" class="project project-{{project.data.project.class}} ">
      <div class="project-details">
        <h4 class="text-9 m-0 mb-1 reveal">{{ project.data.title }}</h4>
        <p class="text-6 m-0 text-weight-400 reveal">{{ project.data.project.tagline }}</p>
      </div>
    </a>
  {% endfor %}
</section>

<section class="cta">
  <div class="cta-container">
    <h4 class="text-10 text-weight-600">Our actions today shape tomorrow. Let's get started.</h4>
    <a href="/contact" class="button">Contact us</a>
  </div>
</section>

<div id="load-screen" class="load-screen">
  <div class="progress-bar"></div>
  <div class="load-text">Loading...</div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
      // Check if the current path is the home screen
      if (window.location.pathname === '/') {
          const loadScreen = document.getElementById('load-screen');
          const progressBar = document.querySelector('.progress-bar');
          const loadText = document.querySelector('.load-text');

          // Function to generate random 8-letter uppercase strings
          const generateRandomText = () => {
              const chars = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ';
              let text = '';
              for (let i = 0; i < 8; i++) {
                  text += chars[Math.floor(Math.random() * chars.length)];
              }
              return "[" + text + "]";
          };

          // Update the load text with random strings
          const interval = setInterval(() => {
              loadText.textContent = generateRandomText();
          }, 100); // Update every 100ms

          // When the progress bar animation ends
          progressBar.addEventListener('animationend', () => {
              clearInterval(interval); // Stop random text updates

              // Show "LOOPDASH" 0.25 seconds before fade-out
              setTimeout(() => {
                  loadText.textContent = '[LOOPDASH]';
              }, 400); // 1s - 0.25s = 0.75s

              // Fade out the load screen
              setTimeout(() => {
                  loadScreen.style.opacity = '0'; // Fade out
                  loadScreen.style.pointerEvents = 'none';

                  // Remove load screen after fade-out
                  setTimeout(() => {
                      loadScreen.remove();
                  }, 500); // Match the CSS transition duration
              }, 500); // Total animation duration
          });
      }
  });
</script>
